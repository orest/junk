

<div class="modal fade" id="modConfirm">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("Stop", "Projects", FormMethod.Post, new { id = "aform", @class = "form-horizontal", role = "form" }))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">Stop </h4>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id")

                    <div class="form-horizontal">

                        <div class="form-group">
                            <label class="col-md-4 control-label text-right">Elapsed  Time:</label>
                            <div class="col-md-8">
                                <div class="input-group">
                                    @Html.TextBox("time", "", new {id="time", @class = "form-control", rows = "4" })
                                    <span class="input-group-addon">minutes</span>
                                </div>

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label text-right">Notes:</label>
                            <div class="col-md-8">
                                @Html.TextArea("Note", "", new { @class = "form-control col-md-8", rows = "4" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary"> Process</button>
                </div>
            }
        </div>
    </div>
</div>
